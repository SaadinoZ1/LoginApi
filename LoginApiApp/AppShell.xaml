<?xml version="1.0" encoding="UTF-8" ?>
<Shell 
    x:Class="LoginApiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LoginApiApp"
    xmlns:views="clr-namespace:LoginApiApp.Views"
    Shell.FlyoutBehavior="Flyout"
    Shell.FlyoutBackgroundColor="White"  
    Shell.ForegroundColor="Black"
    Shell.BackgroundColor="white"
    Shell.TabBarIsVisible="False">
    <Shell.Resources>
        <ResourceDictionary>
            <Style x:Key="FlyoutItemLabelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="Black" />
            </Style>
            <Style  TargetType="Label">
                <Setter Property="TextColor" Value="Black" />
            </Style>
        </ResourceDictionary>
    </Shell.Resources>
        <ShellContent
            Title="LoginPage"  FlyoutItemIsVisible="False" Shell.FlyoutBehavior="Disabled"
            ContentTemplate="{DataTemplate local:LoginPage}"
            Route="LoginPage" />
   

    <FlyoutItem   Route="HomePage"  FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
             Title="Home" Icon="home1.png"
            ContentTemplate="{DataTemplate views:HomePage}"/>
        <ShellContent
            Title="Trajet" Icon="trip.png"
            ContentTemplate="{DataTemplate views:Trajet}"/>
      
        <ShellContent
            Title="Vehicule" Icon="bus1.png"
            ContentTemplate="{DataTemplate views:Vehicule}"/>
      
    </FlyoutItem>
    <Shell.FlyoutHeaderTemplate>
        <DataTemplate>
            <Grid Padding="10">
                <Label Text="{Binding WelcomeMessage}"
                   FontAttributes="Bold"
                   FontSize="Large"    
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />
            </Grid>
        </DataTemplate>
    </Shell.FlyoutHeaderTemplate>
    <Shell.FlyoutFooter>
        <StackLayout  Padding="20">
            <Button Text="Sign Out" Command="{Binding SignOutCommand}"  />
        </StackLayout>
    </Shell.FlyoutFooter>
</Shell>