<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:LoginApiApp.Views"
             x:Class="LoginApiApp.Views.AddTrajet"
             Title="AddTrajet">
    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="10">
            <Entry x:Name="dateEntry" Placeholder="Date (YYYY-MM-DD)" Keyboard="Text"/>
            <Entry x:Name="kilometrageEntry" Placeholder="Kilometrage" Keyboard="Numeric"/>
            <Entry x:Name="dureeEntry" Placeholder="Durée (en minutes)" Keyboard="Numeric"/>
            <Entry x:Name="gainsEntry" Placeholder="Gains" Keyboard="Numeric"/>
            <Entry x:Name="vehiculeIdEntry" Placeholder="Véhicule ID" Keyboard="Numeric"/>

            <Button Text="Add Trajet"
                    Clicked="OnAddTrajetClicked"
                    FontAttributes="Bold"
                    CornerRadius="24"
                    BackgroundColor="Blue"
                    TextColor="White"/>
            <Button x:Name="btnCancel"
                    Text="Cancel" 
                    Clicked="btnCancel_Clicked"
                    FontAttributes="Bold"
                    CornerRadius="24"
                    BackgroundColor="Red"
                    TextColor="White"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>