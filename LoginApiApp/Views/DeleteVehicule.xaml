<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginApiApp.DeleteVehicule"
             Title="">
    <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">

        <Label 
        Text="Welcome !"
        HorizontalOptions="Center" FontAttributes="Bold" />
        <Entry x:Name="EntryVehiculeId"
           Placeholder="Enter Vehicule ID"
           Keyboard="Numeric"/>
        <Button Text="Delete Vehicule"
            Clicked="DeleteVehiculeButton_Clicked"
            FontAttributes="Bold"
            CornerRadius="24"
            BackgroundColor="OrangeRed"
            TextColor="White"/>


    </VerticalStackLayout>
</ContentPage>