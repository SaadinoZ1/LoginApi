<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginApiApp.DeleteTrajet"
             Title="DeleteTrajet">
    <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">

        <Label 
            Text="Welcome !"
            HorizontalOptions="Center" FontAttributes="Bold" />
        <Entry x:Name="EntryTrajetId"
               Placeholder="Enter Trajet ID"
               Keyboard="Numeric"/>
        <Button Text="Delete Trajet"
                Clicked="DeleteTrajetButton_Clicked"
                FontAttributes="Bold"
                CornerRadius="24"
                BackgroundColor="OrangeRed"
                TextColor="White"/>


    </VerticalStackLayout>
</ContentPage>